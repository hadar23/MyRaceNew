<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E99797"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_above="@+id/score_text"
            android:src="@drawable/ic_game_over">

        </ImageView>

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:layout_above="@+id/restart_button"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:text="0"
            />
        <Button
            android:id="@+id/restart_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:text="start again"
            android:paddingHorizontal="15dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:onClick="onClickStartAgain"
            />

        <Button
            android:id="@+id/house_end"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:paddingHorizontal="15dp"
            android:layout_weight="0.2"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:text="home"
            android:onClick="onClickStart"/>
        <ImageView
            android:layout_alignBottom="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_farmer_end"
            android:layout_weight="1.5"
            >
        </ImageView>
    </LinearLayout>



</RelativeLayout>

